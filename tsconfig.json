{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "jsx": "react-jsx"
    },
    "rules": {
        "no-unused-expressions": [
            "off",
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ]
    }
}